<html>
    <head>
        <link rel='stylesheet' href='https://maxcdn.bootstrapcdn.com/bootstrap/3.3.1/css/bootstrap.min.css'>
        <title>Welcome Page</title>
    </head>
    <body>
        <div class='container'>

            <h1>Welcome to your address book!</h1>
            <p>Enter your new contact:</p>

            <form action='/contacts' method='post'>
                <div class='form-group'>
                    <label for='name'>Enter the contacts name:</label>
                    <input id='name' name='name' class='form-control' type='text'>
                </div>
                <div class='form-group'>
                    <label for='phoneNumber'>Enter the contacts phone number:</label>
                    <input id='phoneNumber' name='phoneNumber' class='form-control' type='text'>
                </div>
                <div class='form-group'>
                    <label for='address'>Enter the contacts address:</label>
                    <input id='address' name='address' class='form-control' type='text'>
                </div>
                <button type='submit' class='btn-success btn-info'>Add contact</button>
            </form>


            {%if contacts is not empty %}
            <form action='/delete_contacts' method='post'>
                <button type='submit' class='btn-warning btn-info'>Delete contact list</button>
            <form>
            {% endif %}


            {% if contacts is not empty %}
                <p>Here is a list of your contacts:</p>
                <ul>
                    {% for contact in contacts %}
                        <li><b>{{ contact.getName }}</b></li>
                        <li>{{ contact.getPhoneNumber }}</li>
                        <li>{{ contact.getAddress }}</li>
                    {% endfor %}
                </ul>
            {% endif %}





        </div>
    </body>
</html>
